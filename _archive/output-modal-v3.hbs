<div class="encounter-builder-output">
  <header class="encounter-header">
    <h2>{{encounter.name}}</h2>
    <div class="encounter-meta">
      <span class="difficulty difficulty-{{encounter.difficulty}}">
        {{encounter.difficulty}}
      </span>
      {{{situationHtml}}}
      <span class="xp-budget">
        {{encounter.xpBudget.total}} XP
        {{#if encounter.xpBudget.monsters}}(Monsters: {{encounter.xpBudget.monsters}}, Hazard: {{encounter.xpBudget.hazard}}){{/if}}
      </span>
    </div>
    {{#if encounter.xpBudget.breakdown}}
    <div class="xp-breakdown">{{encounter.xpBudget.breakdown}}</div>
    {{/if}}
  </header>

  <section class="encounter-section anchor-section">
    <h3><i class="fas fa-flag"></i> Narrative Anchor</h3>
    {{{anchorHtml}}}
  </section>

  <section class="encounter-section scene-description-section">
    <h3><i class="fas fa-scroll"></i> Szene (Vorlesetext)</h3>
    {{{sceneDescriptionHtml}}}
  </section>

  <section class="encounter-section player-hook-section">
    <h3><i class="fas fa-user-tag"></i> Spieler-Hook</h3>
    {{{playerHookHtml}}}
  </section>

  <section class="encounter-section narrative-section">
    <h3><i class="fas fa-book-open"></i> Narrative</h3>
    {{{narrativeHtml}}}
  </section>

  <section class="encounter-section win-conditions-section">
    <h3><i class="fas fa-trophy"></i> Win Conditions</h3>
    {{{winConditionsHtml}}}
  </section>

  <section class="encounter-section monsters-section">
    <h3><i class="fas fa-skull"></i> Monsters</h3>
    {{{monstersHtml}}}
  </section>

  <section class="encounter-section battlefield-section">
    <h3><i class="fas fa-map"></i> Battlefield</h3>
    {{{battlefieldHtml}}}
  </section>

  <section class="encounter-section hazard-section">
    <h3><i class="fas fa-exclamation-triangle"></i> Hazard</h3>
    {{{hazardHtml}}}
  </section>

  <footer class="encounter-footer">
    <button type="button" data-action="backToBuilder" class="back-to-builder-btn">
      <i class="fas fa-arrow-left"></i> Zur√ºck
    </button>
    <button type="button" data-action="regenerate" class="regenerate-btn">
      <i class="fas fa-redo"></i> Neu generieren
    </button>
    <button type="button" data-action="saveJournal" class="save-btn">
      <i class="fas fa-book"></i> Als Journal speichern
    </button>
  </footer>
</div>
