<div class="chase-builder-output">
  {{!-- Title & Meta --}}
  <div class="chase-header">
    {{{titleHtml}}}
  </div>

  {{!-- Scenario --}}
  {{#if scenarioHtml}}
  <section class="chase-section scenario-section">
    <h2><i class="fas fa-book-open"></i> Szenario</h2>
    {{{scenarioHtml}}}
  </section>
  {{/if}}

  {{!-- Start Position --}}
  {{#if startPositionHtml}}
  <section class="chase-section start-section">
    {{{startPositionHtml}}}
  </section>
  {{/if}}

  {{!-- Chase Points Rules --}}
  <section class="chase-section rules-section">
    {{{chasePointsRulesHtml}}}
  </section>

  {{!-- Obstacles --}}
  <section class="chase-section obstacles-section">
    <h2><i class="fas fa-mountain"></i> Hindernisse</h2>
    {{{obstaclesHtml}}}
  </section>

  {{!-- End Conditions --}}
  {{#if endConditionsHtml}}
  <section class="chase-section end-section">
    <h2><i class="fas fa-flag-checkered"></i> Endbedingungen</h2>
    {{{endConditionsHtml}}}
  </section>
  {{/if}}

  {{!-- Complication --}}
  {{#if complicationHtml}}
  <section class="chase-section complication-section">
    {{{complicationHtml}}}
  </section>
  {{/if}}

  {{!-- Action Buttons --}}
  <footer class="chase-footer">
    <button type="button" class="back-to-builder-btn" data-action="backToBuilder">
      <i class="fas fa-arrow-left"></i> Zur√ºck
    </button>
    <button type="button" class="regenerate-btn" data-action="regenerate">
      <i class="fas fa-redo"></i> Neu generieren
    </button>
    <button type="button" class="save-journal-btn" data-action="saveJournal">
      <i class="fas fa-book"></i> Als Journal speichern
    </button>
  </footer>
</div>
