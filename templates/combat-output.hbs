<div class="combat-encounter-output situation-output">
  <header class="combat-header">
    <h2>{{title}}</h2>
    <div class="combat-meta">
      <span class="difficulty difficulty-{{difficulty}}">{{difficulty}}</span>
      <span class="party-info">Level {{partyLevel}}, {{partySize}} Spieler</span>
    </div>
  </header>

  <!-- SZENE -->
  <section class="combat-section scene-section">
    <h3><i class="fas fa-scroll"></i> Szene</h3>
    <div class="read-aloud">{{{sceneHtml}}}</div>
  </section>

  {{#if goalsHtml}}
  <!-- ZIELE & PRIORITÄTEN -->
  <section class="combat-section goals-section">
    <h3><i class="fas fa-bullseye"></i> Ziele & Prioritäten</h3>
    {{{goalsHtml}}}
  </section>
  {{/if}}

  {{#if timerHtml}}
  <!-- TIMER -->
  <section class="combat-section timer-section">
    <h3><i class="fas fa-clock"></i> Timer</h3>
    {{{timerHtml}}}
  </section>
  {{/if}}

  {{#if rolesHtml}}
  <!-- MONSTER-ROLLEN -->
  <section class="combat-section roles-section">
    <h3><i class="fas fa-users"></i> Monster-Rollen</h3>
    {{{rolesHtml}}}
    <p class="hint">Wähle für jede Rolle ein passendes Monster aus deiner Sammlung.</p>
  </section>
  {{/if}}

  {{#if dilemmaHtml}}
  <!-- TAKTISCHES DILEMMA -->
  <section class="combat-section dilemma-section">
    <h3><i class="fas fa-balance-scale"></i> Taktisches Dilemma</h3>
    <blockquote class="dilemma-quote">{{{dilemmaHtml}}}</blockquote>
  </section>
  {{/if}}

  {{#if hasMaps}}
  <!-- PASSENDE MAPS -->
  <section class="combat-section maps-section">
    <h3><i class="fas fa-map"></i> Passende Maps</h3>
    <div class="map-suggestions">
      {{#each suggestedMaps}}
      <div class="map-card" data-map-id="{{id}}">
        <img class="map-thumb"
             src="modules/map-browser/data/thumbs/{{folder_name}}.jpg"
             alt="{{title}}"
             onerror="this.src='icons/svg/mystery-man.svg'">
        <div class="map-info">
          <span class="map-title">{{title}}</span>
          {{#if reason}}<span class="map-reason">{{reason}}</span>{{/if}}
          <div class="map-tags">
            {{#each tags}}<span class="map-tag">{{this}}</span>{{/each}}
          </div>
          <div class="map-meta">
            {{#if has_animated}}<span class="animated-badge" title="Animated"><i class="fas fa-film"></i></span>{{/if}}
            {{#if flavor_count}}<span class="flavor-count">{{flavor_count}} Varianten</span>{{/if}}
          </div>
        </div>
        <button type="button" class="create-scene-btn" data-action="createScene" data-map-id="{{id}}">
          <i class="fas fa-plus-circle"></i> Scene
        </button>
      </div>
      {{/each}}
    </div>
  </section>
  {{/if}}

  <footer class="combat-footer">
    <button type="button" data-action="backToBuilder" class="back-btn">
      <i class="fas fa-arrow-left"></i> Zurück
    </button>
    <button type="button" data-action="regenerate" class="regenerate-btn">
      <i class="fas fa-redo"></i> Neu generieren
    </button>
    <button type="button" data-action="saveJournal" class="save-btn">
      <i class="fas fa-book"></i> Als Journal speichern
    </button>
  </footer>
</div>
